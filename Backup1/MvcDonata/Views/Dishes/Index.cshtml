

@{
    ViewBag.Title = "餐品管理";
}
<script src="@Url.Content("~/Scripts/jquery.datagrid.js")" type="text/javascript"></script>
<script src="@Url.Content("~/scripts/dishes.js")" type="text/javascript"></script>

<div>
    <span>选择类别:</span><select class="className"></select>
    <input type="button" value="添加" id="add" />
    <input type="button" value="刷新" id="refresh" />
    <input type="checkbox" id="displayAll" /><span>显示所有的餐品</span>
</div>
<table id="dishes" style="width:100%;">
<tr style="color:White;background-color:#1C5E55;font-weight:bold;" class="header">
		<td  datafield="Name">名称</td>
        <td datafield="PrintingName">打印名称</td>
        <td datafield="Actived">状态</td>
        <td  datafield="Price">价格</td>
        <td  datafield="DefaultBar" >台位</td>
        <td  datafield="ClassName">类别</td>
        <td datafield="Image">图片</td>
        <td  datafield="Count">销售数量</td>
        <td  datafield="CanDiscounted">是否打折</td>
        <td>操作</td>
</tr>
<tr class="template" style="display:none">
    <td style="text-align:left;"></td>
    <td style="text-align:left;"></td>
    <td style="text-align:left;"></td>
    <td style="text-align:right"></td>
    <td style="width:50px;text-align:center;"></td>
    <td style="width:70px;text-align:right;"></td>
    <td style="width:100px;text-align:center;"></td>
    <td style="width:100px;text-align:center;"></td>
    <td style="width:70px;text-align:center;"></td>
    <td>
        <input type="button" command="编辑" value="修改" />
    </td>
</tr>
</table>

<div id="dialog" style="display:none;">
    <div><span>名称</span><input type="text" datafield="Name" readonly required /></div>
    <div><span>打印</span><input type="text" datafield="PrintingName"  required/></div>
    <div><span>状态</span><input type="checkbox" datafield="Actived" /></div>
    <div><span>价格</span><input type="number" datafield="Price" min="1" required/></div>
    <div><span>台位</span><input type="text" datafield="DefaultBar"  required/></div>
    <div><span>类别</span><input type="text" datafield="ClassName" required/></div>
    <div><span>图片</span><input type="text" datafield="Image"  /></div>
    <div><span>打折</span><input type="checkbox" datafield="CanDiscounted" /></div>
    <div><input type="button" value="保存" class="save"/><input type="button" value="取消" class="cancel"/></div>
</div>


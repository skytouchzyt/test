@{
    ViewBag.Title = "RegisterVIP";
}
<style type="text/css">

    fieldset span,div span 
{
     color:White;
     margin:1em;
}
fieldset legend
{
    color:White;
    margin:1em;
}
fieldset
{
    margin:1em 0 0 0;
}
fieldset div
{
    padding:5px;
}


input#phone,input#number
{
    width:200px;
    background-color:#336699;
    font-size:small;
    margin:0 0 0 14px;
    color:white;
}
input#code
{
    width:200px;
    background-color:#336699;
    font-size:small;
    color:white;
}
h2
{
    font-size:32px;
    color:White;
    text-shadow: 1px 1px 2px #111;
    font-weight:bold;
}

</style>
<h2>注册会员卡</h2>
<script src="../../Scripts/RegisterVIP.js"></script>

<div><span>输入手机号码查询VIP卡号：</span><input type="number" id="queryPhone" /><input type="button" id="query" value="查询" /></div>

<fieldset>
<legend>输入会员卡信息</legend>
<div><span>手机：</span><input type="number" id="phone" /><input type="button" id="sendCode" value="发送验证码" /></div>
<div><span>卡号：</span><input type="number" id="number" /></div>
<div class="code"><span>验证码：</span><input type="number" id="code"  /></div>
<div><input type="button" id="addNewVIP" value="保存" /></div>
</fieldset>

@if(User.IsInRole("网管"))
{
<fieldset class="charge">
<legend>给会员卡充值</legend>
<div><span>手机：</span><input type="number" id="charge_phone" required/></div>
<div><span>卡号：</span><input type="number" id="charge_number" required/></div>
<div><span>金额：</span><input type="number" id="charge_value"  required/></div>
<div><input type="button" id="charge" value="保存" /></div>
</fieldset>
}

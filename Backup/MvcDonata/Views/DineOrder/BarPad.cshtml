@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tools.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.enable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dateformat.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/BarPad.js")" type="text/javascript"></script>
    <title>BarPad</title>

    <style type="text/css">

        li.status
        {
            list-style-type:none;
            display:inline;
            float:left;          
        }
        li.status > div
        {
            width:auto;
            height:auto;
            border:2px solid white;
            margin:0.3em;
        }
        
        li h2
        {
            margin:0px;
        }
        
        div.status.prepare
        {
            width:50px;
            height:50px;
            display:inline;
            background:red;
    
        }
        div.status.making
        {
            width:50px;
            height:50px;
            display:inline;
            background:green;   
        }
        
        li.status.prepare
        {
            background:red;
            color:White;
        }
        
        li.status.making
        {
            background:pink;
            color:Red;
        }
        /*需要上餐的餐品*/
        li.status.go
        {
            background:green;
            color:White;
        }
        li.status.clicked
        {
            background-color:Gray;
        }
        
        li.status span
        {
            font-size:larger;

        }
        li.status span.name
        {
            font-size:x-larger;
        }
        
        
        ul.menu
        {
            list-style-type:none; 
            margin:1em;
            padding:0px;
        }

        ul.menu li
        {
   
            display:inline;
            margin:1em;
            padding:2px;
            border:1px dashed Green;
    
        }
        ul.menu li a.selected
        {
            background:#336699;
            color:White;
        }
        ul.menu a
        {
            font-size: 1.6em; 
            color: #039; 
            text-decoration: none;
        }
        div.tabBar
        {
            border:1px solid red;
            margin:0px;
            padding:0px;
            height:2000px;
        }
        div.tabBar ul
        {
            margin:0px;
            padding:0px;
        }
        
       /*堂食,外带,外送 餐品名称div的背景色*/
       li.status span.name.dine
       {
         background-color:Blue;
       }
       li.status span.name.phone
       {
         background-color:White;
         color:Black;
       }
       li.status span.name.takeaway
       {
         background-color:Purple;
       }
    </style>
</head>
<body>
<ul style="display:none" class="template">
    <li class="status">
        <div>
            <div><input type="hidden" class="id" /></div>
            <div><h2><span class="name"></span></h2></div>
            <div><span class="remark"></span></div>
            <div><span class="time"></span></div>
        </div>
    </li>
</ul>
<ul class="menu">
    <li><a href="#notdone" class="selected">制作</a></li>
    <li><a href="#done">完成</a></li>  
    <li><a href="#dialogSettings">设置</a></li>  
    <li><a href="#" id="fullScreen">全屏</a></li>
    <li><span>设备号:</span><em id="labelIndex"></em></li>
    <li><a href="#" id="refresh">-</a></li>
</ul>

<div id="notdone" class="tabBar">
    <ul></ul>
</div>
<div id="done" class="tabBar" style="display:none;">
    <ul></ul>
</div>



<div id="dialogSettings" style="display:none;padding:1em;border:2px dashed green;" class="tabBar">
    <div><span>默认台位:</span><select id="defaultBar" ></select></div>
    <div><span>时间限制:</span><input type="number" id="before" placeholder="显示多少分钟以内的餐品" style="width:50px;" /></div>
    <div><span>设置响铃:</span><input type="checkbox" value="响铃" id="isRing" />响铃</div>
    <div><span>设备编号:</span><input type="number" id="index" style="width:50px;" /></div>
    <div><span>出餐设置:</span><input type="checkbox" id="displayAll" />显示所有的餐品</div>
</div>

<audio id="ring" src="@Url.Content("~/content/ring.mp3")">
浏览器不能播放铃声!
</audio>

</body>
</html>

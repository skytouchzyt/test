@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.18.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/tools.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dateformat.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.enable.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/BarPad.js")" type="text/javascript"></script>
    <title>BarPad</title>

    <style type="text/css">
        div.tabBar
        {
            height:600px;
        }
        div.tabBar > div
        {
            height:500px;
        }
        li.status
        {
            list-style-type:none;
            display:inline;
        }
    </style>
</head>
<body>
<ul style="display:none" class="template">
    <li class="status">
        <div>
            <input type="hidden" class="id" />
            <div><span class="name"></span></div>
            <div><span class="tablenumber"></span></div>
            <div><span class="remark"></span></div>
            <div><span class="time"></span></div>
        </div>
    </li>
</ul>

<div class="tabBar">
    <ul >
        <li><a href="#drink">水台</a></li>
        <li><a href="#pizza">饼台</a></li>
        <li><a href="#snack">小吃台</a></li>
        <li><a href="#food">主食台</a></li>
        <li><a href="#out">出餐台</a></li>
        <li><a href="#settings">设置</a></li>
    </ul>

    <div id="drink">
        <div class="tabDish">
            <h3>制作</h3>
            <div>
                <ul class="notdone"></ul>
            </div>
            <h3>完成</h3>
            <div>
                <ul class="done"></ul>
            </div>
        </div>
    </div>

    <div id="pizza">
        <div class="tabDish">
            <h3>制作</h3>
            <div>
                <ul class="notdone"></ul>
            </div>
            <h3>完成</h3>
            <div>
                <ul class="done"></ul>
            </div>
        </div>
    </div>

    <div id="snack">
        <div class="tabDish">
            <h3>制作</h3>
            <div>
                <ul class="notdone"></ul>
            </div>
            <h3>完成</h3>
            <div>
                <ul class="done"></ul>
            </div>
        </div>
    </div>

    <div id="food">
        <div class="tabDish">
            <h3>制作</h3>
            <div>
                <ul class="notdone"></ul>
            </div>
            <h3>完成</h3>
            <div>
                <ul class="done"></ul>
            </div>
        </div>
    </div>

    <div id="out">
        <div class="tabDish">
            <h3>制作</h3>
            <div>
                <ul class="notdone"></ul>
            </div>
            <h3>完成</h3>
            <div>
                <ul class="done"></ul>
            </div>
        </div>
    </div>

    <div id="settings">
        <div><span>默认台位:</span><select id="defaultBar" ></select></div>
        <div><span>时间限制:</span><input type="number" id="before" placeholder="显示多少分钟以内的餐品" /></div>
    </div>
</body>
</html>
